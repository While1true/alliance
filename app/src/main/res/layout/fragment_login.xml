<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60px"
        android:layout_marginTop="80px"
        android:src="@drawable/ic_main_phone" />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_phone"
        android:paddingTop="20px"
        android:layout_marginLeft="54px"
        android:layout_marginRight="60px"
        android:layout_toRightOf="@+id/iv_phone"
        android:background="@null"
        android:hint="手机号"
        android:singleLine="true"
        android:textColor="#FFD094"
        android:textColorHint="#FFD094"
        android:textSize="32px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_alignStart="@+id/et_phone"
        android:layout_below="@+id/et_phone"
        android:layout_marginRight="60px"
        android:layout_marginTop="4px"
        android:background="#80FFD3BA" />

    <ImageView
        android:id="@+id/iv_pass"
        android:layout_below="@+id/iv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60px"
        android:layout_marginTop="109px"
        android:src="@drawable/ic_main_pass" />

    <EditText
        android:id="@+id/et_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_pass"
        android:paddingTop="20px"
        android:layout_marginLeft="54px"
        android:layout_marginRight="60px"
        android:layout_toRightOf="@+id/iv_pass"
        android:background="@null"
        android:hint="密码"
        android:singleLine="true"
        android:textColor="#FFD094"
        android:textColorHint="#FFD094"
        android:textSize="32px" />

    <View
        android:id="@+id/line_pass"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_alignStart="@+id/et_pass"
        android:layout_below="@+id/et_pass"
        android:layout_marginRight="60px"
        android:layout_marginTop="4px"
        android:background="#80FFD3BA" />
    <TextView
        android:id="@+id/tv_forget"
        android:layout_marginTop="30px"
        android:layout_below="@+id/line_pass"
        android:textSize="28px"
        android:text="忘记密码？"
        android:textColor="#FF9E20"
        android:layout_width="wrap_content"
        android:layout_marginRight="60px"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:id="@+id/rl_quicklogin"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/login"
        android:background="@drawable/main_quickloginbg"
        android:layout_width="500px"
        android:layout_marginBottom="65px"
        android:layout_height="98px">
        <ImageView
            android:id="@+id/iv_sbz"
            android:layout_width="wrap_content"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14px"
            android:src="@drawable/ic_main_quicklogin"
            android:layout_height="match_parent" />
        <View
            android:layout_width="2px"
            android:layout_toRightOf="@+id/iv_sbz"
            android:layout_marginLeft="14px"
            android:layout_height="match_parent"
            android:background="#80ffffff"/>
        <TextView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="95px"
            android:textColor="#fff"
            android:text="用赛百姿登入"
            android:textSize="32px"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </RelativeLayout>
    <TextView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:background="#ff9e20"
        android:textColor="#fff"
        android:textSize="38px"
        android:text="登录"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_height="107px" />
</RelativeLayout>