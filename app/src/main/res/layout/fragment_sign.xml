<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60px"
        android:layout_marginTop="80px"
        android:src="@drawable/ic_main_phone" />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_phone"
        android:paddingTop="20px"
        android:layout_marginLeft="54px"
        android:layout_marginRight="60px"
        android:layout_toRightOf="@+id/iv_phone"
        android:background="@null"
        android:hint="手机号"
        android:singleLine="true"
        android:textColor="#FFD094"
        android:textColorHint="#FFD094"
        android:textSize="32px" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_alignStart="@+id/et_phone"
        android:layout_below="@+id/et_phone"
        android:layout_marginRight="60px"
        android:layout_marginTop="4px"
        android:background="#80FFD3BA" />
    <ImageView
        android:id="@+id/iv_code"
        android:layout_below="@+id/iv_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60px"
        android:layout_marginTop="109px"
        android:src="@drawable/ic_main_code" />

    <EditText
        android:id="@+id/et_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_code"
        android:paddingTop="20px"
        android:layout_marginLeft="54px"
        android:layout_toLeftOf="@+id/tv_getcode"
        android:layout_toRightOf="@+id/iv_code"
        android:background="@null"
        android:hint="验证码"
        android:singleLine="true"
        android:textColor="#FFD094"
        android:textColorHint="#FFD094"
        android:textSize="32px" />
    <TextView
        android:id="@+id/tv_getcode"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/iv_code"
        android:text="获取验证码"
        android:layout_marginRight="60px"
        android:layout_width="wrap_content"
        android:paddingTop="20px"
        android:textColor="#ff9E20"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/line_pass"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_alignStart="@+id/et_code"
        android:layout_below="@+id/et_code"
        android:layout_marginRight="60px"
        android:layout_marginTop="4px"
        android:background="#80FFD3BA" />

    <ImageView
        android:id="@+id/iv_pass"
        android:layout_below="@+id/iv_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60px"
        android:layout_marginTop="109px"
        android:src="@drawable/ic_main_pass" />

    <EditText
        android:id="@+id/et_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_pass"
        android:paddingTop="20px"
        android:layout_marginLeft="54px"
        android:layout_marginRight="60px"
        android:layout_toRightOf="@+id/iv_pass"
        android:background="@null"
        android:hint="密码"
        android:imeActionLabel="注册"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:textColor="#FFD094"
        android:textColorHint="#FFD094"
        android:textSize="32px" />

    <View
        android:id="@+id/line_pass"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_alignStart="@+id/et_pass"
        android:layout_below="@+id/et_pass"
        android:layout_marginRight="60px"
        android:layout_marginTop="4px"
        android:background="#80FFD3BA" />

    <TextView
        android:id="@+id/sign"
        android:layout_width="match_parent"
        android:background="#ff9e20"
        android:textColor="#fff"
        android:textSize="38px"
        android:text="注册"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_height="107px" />
</RelativeLayout>