<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#fff"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_title"
        style="@style/titlebar_style"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#fff">

        <ImageView
            android:id="@+id/img_title_back"
            style="@style/title_back_style" />

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_title_back"
            android:text="返回"
            android:textColor="#4a4a4a"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/title_name"
            style="@style/title_txt_style"
            android:text="设置" />
    </RelativeLayout>
    <LinearLayout
        android:divider="@drawable/divider"
        android:showDividers="middle|end"
        android:layout_marginLeft="30px"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_modify_phone"
            android:textColor="#353535"
            android:text="修改手机号"
            android:textSize="32px"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/ic_go"
            android:layout_marginRight="30px"
            android:layout_width="match_parent"
            android:layout_height="117px" />
        <TextView
            android:id="@+id/tv_loginpass"
            android:textColor="#353535"
            android:text="修改登录密码"
            android:textSize="32px"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/ic_go"
            android:layout_marginRight="30px"
            android:layout_width="match_parent"
            android:layout_height="117px" />
        <TextView
            android:id="@+id/tv_paypass"
            android:textColor="#353535"
            android:text="修改支付密码"
            android:textSize="32px"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/ic_go"
            android:layout_marginRight="30px"
            android:layout_width="match_parent"
            android:layout_height="117px" />
        <TextView
            android:id="@+id/tv_push"
            android:textColor="#353535"
            android:text="推送"
            android:textSize="32px"
            android:layout_marginTop="50px"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/ic_go"
            android:layout_marginRight="30px"
            android:layout_width="match_parent"
            android:layout_height="117px" />
        <TextView
            android:id="@+id/tv_clear"
            android:textColor="#353535"
            android:text="清理缓存"
            android:textSize="32px"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/ic_go"
            android:layout_marginRight="30px"
            android:layout_width="match_parent"
            android:layout_height="117px" />
    </LinearLayout>
</LinearLayout>