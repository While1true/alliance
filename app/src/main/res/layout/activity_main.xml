<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.saibaizi.alliance.MainActivity">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_rg_bg"
        android:paddingBottom="56px"
        android:paddingTop="56px">

        <ImageView
            android:id="@+id/iv_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_main_login" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_top">

        <RadioGroup
            android:id="@+id/rg_main"
            android:layout_width="match_parent"
            android:layout_height="107px"
            android:layout_below="@+id/rl_top"
            android:background="#FFF4E6"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_login"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="登陆"
                android:textColor="@drawable/main_rg_selector"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/rb_sign"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:button="@null"
                android:checked="false"
                android:gravity="center"
                android:text="注册"
                android:textColor="@drawable/main_rg_selector"
                android:textSize="15sp" />
        </RadioGroup>

        <ImageView
            android:id="@+id/sanjiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/rg_main"
            android:src="@drawable/ic_main_switch" />

        <FrameLayout
            android:id="@+id/fl_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rg_main"
            android:background="@color/main_color"></FrameLayout>
    </RelativeLayout>

</RelativeLayout>
