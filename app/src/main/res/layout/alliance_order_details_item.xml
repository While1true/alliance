<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="#EDEDED"
    android:orientation="vertical">
    <!--android:layout_marginBottom="14dp"-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:paddingLeft="15dp"
        android:background="#fff">

        <TextView
            android:id="@+id/tv_from"
            android:layout_width="28dp"
            android:layout_height="14dp"
            android:background="#ff7575"
            android:text=""
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:textSize="10sp"
            android:textColor="#fff"
            android:layout_marginTop="19dp"
            />
        <TextView
            android:layout_toRightOf="@+id/tv_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="订单状态"
            android:textColor="#535353"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tv_paystate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="16dp"
            android:text="已付款"
            android:textColor="#FF3669"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="59dp"
            android:background="#fafafa"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="94dp"
            android:layout_toLeftOf="@+id/tv_paystate"
            android:layout_marginTop="61dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="雪纺短袖日本校服学院风黑色 时尚披风"
            android:textColor="#2a2a2a"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="62dp"
            android:text="x1"
            android:textColor="#949494"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="122dp"
            android:text="¥20.0"
            android:textColor="#2a2a2a"
            android:textSize="14dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginBottom="0.5dp"
        android:layout_marginTop="0.5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fff"
            android:orientation="vertical"
            android:paddingLeft="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:drawableLeft="@drawable/alliance_shouyi_num"
                android:drawablePadding="7dp"
                android:text="预估秀币收入（个）"
                android:textColor="#888888"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_shouyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="20000.00"
                android:textColor="#525252"
                android:textSize="25dp"
                android:textStyle="bold" />
        </LinearLayout>

        <Space
            android:layout_width="0.5dp"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fff"
            android:paddingLeft="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:drawableLeft="@drawable/alliance_total"
                android:drawablePadding="7dp"
                android:text="成交额"
                android:textColor="#888888"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_total_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="18dp"
                android:text="100000.0"
                android:textColor="#525252"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tv_yj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="51dp"
                android:drawableLeft="@drawable/alliance_percentage"
                android:drawablePadding="7dp"
                android:text="佣金比例"
                android:textColor="#888888"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginTop="50dp"
                android:text="20%"
                android:textColor="#525252"
                android:textSize="15dp" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="#fff"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="订单创建时间"
            android:textColor="#535353"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:text="2016-08-11 18:10:55"
            android:textColor="#a3a3a3"
            android:textSize="13dp" />
    </RelativeLayout>
</LinearLayout>